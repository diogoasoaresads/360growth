# =============================================================================
# 360growth - Environment Variables
# Copy this file to .env.local and fill in the values
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/360growth"

# NextAuth
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Redis
REDIS_URL="redis://localhost:6379"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Resend (Email)
RESEND_API_KEY="re_..."
EMAIL_FROM="360growth <noreply@yourdomain.com>"

# App URL (for email links, webhooks, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google OAuth (for Google Ads integration)
GOOGLE_OAUTH_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="your-client-secret"
GOOGLE_OAUTH_REDIRECT_URI="http://localhost:3000/api/oauth/google/callback"
GOOGLE_OAUTH_SCOPES="https://www.googleapis.com/auth/adwords"
GOOGLE_DEVELOPER_TOKEN="your-google-ads-developer-token"
